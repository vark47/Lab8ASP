@page
@model RazorPagesSong.Pages.Songs.CreateModel

@{
    ViewData["Title"] = "Create";

}
<h2>Create</h2>

<h4>Song</h4>
<hr />
<p>@Model.lastSongDisplay</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p style="font-weight: bold;">Title</p>
                <input asp-for="Song.Title" class="form-control" />
                <span asp-validation-for="Song.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p style="font-weight: bold;">Writer</p>
                <input asp-for="Song.Writer" class="form-control" />
                <span asp-validation-for="Song.Writer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p style="font-weight: bold;">Composer</p>
                <input asp-for="Song.Composer" class="form-control" />
                <span asp-validation-for="Song.Composer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p style="font-weight: bold;">Rating</p>
                <input asp-for="Song.Rating" class="form-control" />
                <span asp-validation-for="Song.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p style="font-weight: bold;">Date Released</p>
                <input asp-for="Song.ReleaseDate" class="form-control" />
                <span asp-validation-for="Song.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p style="font-weight: bold;">Artist</p>
                <input asp-for="Song.Artist" class="form-control" />
                <span asp-validation-for="Song.Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p style="font-weight: bold;">Album</p>
                <input asp-for="Song.Album" class="form-control" />
                <span asp-validation-for="Song.Album" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" asp-page-handler="Create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
