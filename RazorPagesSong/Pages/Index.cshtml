@page
@model RazorPagesSong.Pages.Songs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<form>
    <p>
        
        Genre: <select asp-for="SongAlbum" asp-items="Model.Albums">
            <option value="">All</option>
        </select>  

        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<p>
    <a asp-page="./Songs/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Song[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Song[0].Writer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Song[0].Composer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Song[0].ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Song[0].Artist)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Song[0].Album)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Song[0].Rating)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Song) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Writer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Composer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-page="./Songs/Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Songs/Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Songs/Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
